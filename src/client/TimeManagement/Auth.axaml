<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:TimeManagement"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TimeManagement.Auth"
        Title="Auth">
	<Window.DataContext>
		<local:AuthViewModel/>
	</Window.DataContext>
	<Grid ColumnDefinitions="*,Auto,Auto" RowDefinitions="*,*,*">
		<TextBlock 
			HorizontalAlignment="Center" 
			VerticalAlignment="Center" >
			
		</TextBlock>
		<ComboBox SelectedItem="{Binding LocalizationViewModel.CurrentLanguage}"
				  Margin="10" Grid.Column="3" Width="100">
			<ComboBoxItem Content="English" Tag="en"/>
			<ComboBoxItem Content="Russian" Tag="ru"/>
		</ComboBox>
	</Grid>
</Window>
